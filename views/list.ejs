<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <div class="box">
      <h1>Todo List</h1>

      <div class="task-list">
        <% tasks.forEach(item => { %>
          <div class="task-item">
            <input 
              type="checkbox" 
              onchange="this.nextElementSibling.classList.toggle('checked')" 
            />
            <span><%= item.name %></span>

            <form method="POST" action="/tasks/<%= item._id %>?_method=PUT">
              <input 
                type="text" 
                name="updatedText" 
                placeholder="Edit task" 
                required
              />
              <button type="submit">‚úèÔ∏è</button>
            </form>

            <form method="POST" action="/tasks/<%= item._id %>?_method=DELETE">
              <button type="submit">üóëÔ∏è</button>
            </form>
          </div>
        <% }) %>
      </div>

      <form method="POST" action="/" class="add-task">
        <input type="text" name="taskName" placeholder="Enter the task" required />
        <button type="submit">+</button>
      </form>
    </div>
  </div>
</body>
</html>
